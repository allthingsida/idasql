{
    "description": "IDASQL Test Configuration",
    "version": "1.0",

    "databases": {
        "default": "wizmo32.exe.i64",
        "samples": [
            {
                "name": "wizmo32",
                "path": "../wizmo32.exe.i64",
                "description": "Small Windows executable for basic tests"
            }
        ]
    },

    "test_suites": {
        "all": {
            "description": "Run all tests",
            "filter": "*"
        },
        "quick": {
            "description": "Quick smoke tests",
            "filter": "*Basic*:*Count*:*Metadata*"
        },
        "funcs": {
            "description": "Function table tests",
            "filter": "FuncsTable*"
        },
        "xrefs": {
            "description": "Cross-reference tests",
            "filter": "XrefsTable*"
        },
        "complex": {
            "description": "Complex query tests",
            "filter": "ComplexQueries*"
        },
        "framework": {
            "description": "Virtual table framework tests",
            "filter": "VTableFramework*"
        }
    },

    "sql_queries": {
        "directory": "sql",
        "queries": [
            {
                "name": "funcs_count",
                "file": "funcs_count.sql",
                "description": "Count all functions",
                "expected_min_rows": 1
            },
            {
                "name": "funcs_top10",
                "file": "funcs_top10_largest.sql",
                "description": "Top 10 largest functions",
                "expected_rows": 10
            },
            {
                "name": "segments_all",
                "file": "segments_all.sql",
                "description": "All segments",
                "expected_min_rows": 1
            },
            {
                "name": "xrefs_most_called",
                "file": "xrefs_most_called.sql",
                "description": "Most called functions",
                "expected_rows": 10
            },
            {
                "name": "complex_analysis",
                "file": "complex_func_analysis.sql",
                "description": "Complex function analysis with joins"
            }
        ]
    },

    "settings": {
        "timeout_seconds": 60,
        "verbose": false,
        "stop_on_failure": false
    }
}
